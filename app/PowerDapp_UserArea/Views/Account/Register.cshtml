@using PowerDapp_UserArea.Models.AccountViewModels;

@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="col-12">
            <input asp-for="Email" class="form-control text-center" placeholder="E-mail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-5">
            <input asp-for="FirstName" class="form-control text-center" placeholder="Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-2"></div>
        <div class="col-5">
            <input asp-for="LastName" class="form-control text-center" placeholder="Surname" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-5">
            <input asp-for="Password" class="form-control text-center" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-2"></div>
        <div class="col-5">
            <input asp-for="ConfirmPassword" class="form-control text-center" placeholder="Confirm password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row buttons-row">
        <div class="col-5">
            <a asp-action="Login" class="btn btn-primary btn-block">Back</a>
        </div>
        <div class="col-2"></div>
        <div class="col-5">
            <button type="submit" class="btn btn-success btn-block">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
