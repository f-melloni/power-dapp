@using PowerDapp_UserArea.Models.AccountViewModels;

@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row justify-content-center">
        <div class="col-6">
            <input asp-for="Email" class="form-control text-center" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row buttons-row justify-content-center">
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Reset password</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
