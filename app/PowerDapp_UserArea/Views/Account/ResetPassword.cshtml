@using PowerDapp_UserArea.Models.AccountViewModels;

@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<form asp-controller="Account" asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Code" type="hidden" />

    <div class="form-row justify-content-center">
        <div class="col-5">
            <input asp-for="Email" class="form-control text-center" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="col-5">
            <input asp-for="Password" class="form-control text-center" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="col-5">
            <input asp-for="ConfirmPassword" class="form-control text-center" placeholder="Re-type password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row buttons-row justify-content-center">
        <div class="col-5">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
